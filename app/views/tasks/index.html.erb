<h1>My Tasks</h1>

<div>
<ul>
<% @tasks.each do |task| %>
<li><%= task.title %> - <%= task.description %></li>


<%= link_to "View", task_path(task), class:"btn btn-dark"%> <br />
<%= link_to "Edit", edit_task_path(task), class:"btn btn-dark" %>  <br />
<%= link_to 'Delete', task_path(task), method: :delete, class:"btn btn-dark" %> <br />

<%= link_to "Create another task", new_task_path(@user) %> <br />
<% end %>
</ul>
</div>