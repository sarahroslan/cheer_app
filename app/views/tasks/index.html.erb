
<h2 class="text-center my-3">Search My Tasks</h2>

<div class="container text-center">
	<h4>Narrow your search:</h4>

<!-- Search bar starts -->
   <%= form_tag(tasks_path, method: :get) do %>
  	<%= text_field_tag :term, params[:term] %>
  	<%= submit_tag 'Search', name: nil %>
	<% end %>

<!-- Search bar ends -->

<div class="row">
    <% @tasks.all.each do |task| %>
    <div class="col-md-4">
      <div class="card mt-3 mx-3 p-1 d-flex align-items-stretch">
       
        <div class="cardtask">
          <h5 class="card-title"><%= task.title %></h5>
            <p class="card-text"><%= task.description %></p>
            <%= link_to "View", task_path(task), class:"btn btn-dark"%>
            <% if task.user_id == current_user.id %>
            <%= link_to "Edit", edit_task_path(task), class:"btn btn-dark" %>
            <%= link_to 'Delete', task_path(task), method: :delete, class:"btn btn-dark" %>
            <%= link_to "Create", new_task_path(task), class:"btn btn-dark" %>  <br />
           <%end%>
        </div>
      </div>
    </div>
    <%end%>
  </div>



