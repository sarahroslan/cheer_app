<div class="col-sm-3 col-md-4" id="pending_tasks">
      <div class="card mt-3 mx-3 p-1 d-flex align-items-stretch">
				  <div class="card-body">
				    	<h4 class="card-title text-dark">Pending Tasks</h4></a>
						  <ol>
							<% @incomplete_tasks.each do |task| %>
								<li><%= task.title %> <br/>
								<%= task.description%><br /> 
								<!--checkbox to indicate task is done!-->
								<%= form_tag(update_status_path(task), method: :patch)  do %> 
  								<%= submit_tag 'Mark as Complete'%>
								<% end %>								
							
								<%= link_to "(Delete)", task, method: :delete, data: {confirm: "Are you sure you want to delete this task?"}, remote: true %>
							<%end %>
						  </ol>
				  </div>
			</div>
		</div>